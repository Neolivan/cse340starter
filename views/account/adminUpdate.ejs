<% if (title) { %>
    <h1 id="type-title">
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
        <form action="/account/adminUpdate" method="post" class="form-styles">
            <label for="fname">
                <h5>
                    First name:
                </h5>
                <input type="text" name="account_firstname" id="accountFirstname" required placeholder="Enter your first name" value="<%= locals.account_firstname %>">
            </label>
            <label for="lname">
                <h5>
                    Last name:
                </h5>
                <input type="text" required id="lname" name="account_lastname" placeholder="Enter your last name" value="<%= locals.account_lastname %>">
            </label>
            <label for="email">
                <h5>
                    Email address:
                </h5>
                <input type="email" required id="email" name="account_email"  placeholder="Enter a valid email address" value="<%= locals.account_email %>">
            </label>
            <label for="type">
                <h5>
                    Type:
                </h5>
                <input type="type" required id="type" name="account_type"  placeholder="Enter a valid type" value="<%= locals.account_type %>">
            </label>
            
            <button type="submit">Update Infos</button>
            <input type="hidden" name="account_id"
            <% if(locals.account_id) { %> value="<%= locals.account_id %>"
            <% } %>>
        </form>
        <h1 class="center-text">Password Update</h1>
        <form action="/account/adminUpdatePass" method="post" class="form-styles">
            <label for="pass">
                <h5>
                    Password:
                </h5>
                <input type="password" required id="pass" name="account_password" class="password-input" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
                title="Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character"
                placeholder="Enter a valid password"
                    >
            </label>
            <input type="hidden" name="account_id"
            <% if(locals.account_id) { %> value="<%= locals.account_id %>"
            <% } %>>
            <button type="submit">Update Password</button>
        </form>